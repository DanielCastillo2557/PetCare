<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo para mensajes enviados -->
    <!-- Puedes usar ?attr/colorPrimary para tomar el color primario de tu tema,
         o un color específico como #007AFF (un azul común para mensajes enviados) -->
    <solid android:color="@color/color_nav_icon_resaltado"/>
    <!-- <solid android:color="#4CAF50"/> Ejemplo: un verde -->
    <!-- Bordes redondeados -->
    <!-- Ajusta el radio como desees. A veces se hacen diferentes radios
         para que la "cola" de la burbuja parezca más natural, pero para
         algo sencillo, un radio uniforme está bien. -->
    <corners
        android:radius="16dp"
        android:topRightRadius="4dp" /> <!-- Ejemplo: esquina superior derecha menos redondeada -->
    <!-- O solo android:radius="16dp" para todas las esquinas iguales -->

</shape>