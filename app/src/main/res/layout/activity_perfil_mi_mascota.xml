<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilMiMascotaActivity">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#D97B5D"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_atras"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mascota 1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Imagen circular de la mascota -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/petImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_user"
        app:civ_border_color="#FF7043"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- Ícono para editar la foto -->
    <ImageView
        android:id="@+id/editPhoto"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_editar"
        app:layout_constraintBottom_toBottomOf="@id/petImage"
        app:layout_constraintEnd_toEndOf="@id/petImage"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- Datos de la mascota -->

    <!-- Descripción -->

    <!-- android:background="@drawable/edittext_background" -->

    <!-- Álbum de fotos -->

    <!-- Botón Encargar -->

    <TextView
        android:id="@+id/txtNombreMascota"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Nombre"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toEndOf="@+id/petImage"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />

    <TextView
        android:id="@+id/txtTamanioMascota"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="Tamaño"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/petImage"
        app:layout_constraintTop_toBottomOf="@+id/txtEdadMascota" />

    <TextView
        android:id="@+id/txtDescMascota"
        android:layout_width="323dp"
        android:layout_height="74dp"
        android:layout_marginTop="28dp"
        android:text="Descripcion"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTamanioMascota" />

    <TextView
        android:id="@+id/txtEdadMascota"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/petImage"
        app:layout_constraintTop_toBottomOf="@+id/txtRazaMascota" />

    <TextView
        android:id="@+id/txtEspecieMascota"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="Especie"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/petImage"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreMascota" />

    <TextView
        android:id="@+id/txtRazaMascota"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="Raza"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/petImage"
        app:layout_constraintTop_toBottomOf="@+id/txtEspecieMascota" />

    <TextView
        android:id="@+id/photoAlbumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Álbum de fotos"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescMascota" />

    <GridLayout
        android:id="@+id/photoGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="116dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photoAlbumLabel"
        app:layout_constraintVertical_bias="0.0">

        <!-- Primer botón: agregar foto -->
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_agregar_foto_24px" />

        <!-- Fotos mock -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user" />
        <!-- Repite según se necesite -->

    </GridLayout>

    <Button
        android:id="@+id/btnEncargar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Encargar"
        android:backgroundTint="#D97B5D"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#B8F5D4"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_mis_mascotas"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_mis_chats"
            android:layout_marginStart="32dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
