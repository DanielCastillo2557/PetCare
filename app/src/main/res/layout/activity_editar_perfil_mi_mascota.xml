<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainEditarMascota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFB"
    tools:context=".EditarPerfilMiMascotaActivity">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBarEditar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#D97B5D"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBackEditar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_atras"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:contentDescription="Volver"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvTituloEditarMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil de Mascota"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBarEditar"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarCambiosMascota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre de la Mascota -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNombreMascotaEditar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Nombre de la Mascota">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Especie de la Mascota -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEspecieMascotaEditar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Especie (Ej: Perro, Gato)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEspecieMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Raza de la Mascota -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRazaMascotaEditar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Raza">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRazaMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Edad de la Mascota -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEdadMascotaEditar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Edad (Ej: 5)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEdadMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
                <!-- Opcional: si quieres que el usuario pueda escribir "meses" usa inputType="text"
                     y maneja la conversión en el código.
                     Por simplicidad, lo dejamos como number aquí asumiendo que solo se ingresa el número.
                -->
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tamaño de la Mascota -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTamanioMascotaEditar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Tamaño (Ej: Pequeño, Mediano)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTamanioMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descripción de la Mascota -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescripcionMascotaEditar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Descripción Adicional">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripcionMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top|start"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnGuardarCambiosMascota"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:backgroundTint="#D97B5D"
        android:text="Guardar Cambios"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>